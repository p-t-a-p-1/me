---
import { Tag } from "../lib/content";

interface Props {
  tag: Tag;
  count?: number;
}

const { tag, count = 0 } = Astro.props;
---

<a href={`/blog/tags/${tag.slug}`} class="tag-list-item">
	<span class="tag-list-item__name">{tag.name}</span>
	<span class="tag-list-item__count">{count} 記事</span>
</a>

<style>
	.tag-list-item {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 6px 12px 6px 6px;
		text-decoration: none;
		box-shadow: inset 0px -1px 0px 0px rgba(196, 196, 196, 1);
		transition: background-color 0.2s ease;
	}

	.tag-list-item:hover {
		background-color: #f5f5f5;
	}

	.tag-list-item__name {
		font-family: "Noto Sans JP", sans-serif;
		font-weight: 700;
		font-size: 14px;
		line-height: 1.55;
		letter-spacing: 0.02em;
		color: #262626;
	}

	.tag-list-item__count {
		font-family: "Noto Sans JP", sans-serif;
		font-weight: 700;
		font-size: 12px;
		line-height: 1.45;
		letter-spacing: 0.03em;
		color: #bfbfbf;
		text-align: right;
	}
</style>
