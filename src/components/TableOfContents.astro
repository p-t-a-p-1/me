---
interface TocItem {
  text: string;
  id: string;
  level: string;
}

interface Props {
  items: TocItem[];
}

const { items } = Astro.props;
---

<nav class="toc">
	<div class="toc__title">目次</div>
	<ul class="toc__list">
		{
			items.map((item) => (
				<li class:list={["toc__item", `toc__item--level-${item.level}`]}>
					<a href={`#${item.id}`} class="toc__link">
						{item.text}
					</a>
				</li>
			))
		}
	</ul>
</nav>

<style>
	.toc {
		background-color: #ffffff;
		border-radius: 0;
		margin-top: 8px;
		box-shadow: none;
		border: 1px solid #262626;
	}

	.toc__title {
		display: flex;
		align-items: center;
		padding: 8px 10px;
		background-color: #f5f5f5;
		font-family: "Noto Sans JP", sans-serif;
		font-size: 14px;
		line-height: 1.3;
		letter-spacing: 0.02em;
		color: #8c8c8c;
		border-radius: 0;
		border-bottom: 1px solid #262626;
	}

	.toc__list {
		list-style: none;
		padding: 4px;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 0;
	}

	.toc__item {
		transition: opacity 0.2s ease;
	}

	.toc__item--level-h1 {
		margin-left: 0;
	}

	.toc__item--level-h1 .toc__link {
		font-weight: 600;
		font-size: 15px;
		color: #1e40af;
	}

	.toc__item--level-h2 {
		margin-left: 20px;
		position: relative;
	}

	.toc__item--level-h2::before {
		content: "";
		position: absolute;
		left: -8px;
		top: 50%;
		transform: translateY(-50%);
		width: 2px;
		height: 20px;
		background-color: #10b981;
		opacity: 0.3;
	}

	.toc__item--level-h2 .toc__link {
		font-weight: 500;
		font-size: 14px;
		color: #065f46;
	}

	.toc__item--level-h3 {
		margin-left: 40px;
		position: relative;
	}

	.toc__item--level-h3::before {
		content: "";
		position: absolute;
		left: -8px;
		top: 50%;
		transform: translateY(-50%);
		width: 1px;
		height: 16px;
		background-color: #f59e0b;
		opacity: 0.4;
	}

	.toc__item--level-h3 .toc__link {
		font-weight: 400;
		font-size: 13px;
		color: #92400e;
	}

	.toc__item--level-h4 {
		margin-left: 60px;
	}

	.toc__item--level-h4 .toc__link {
		font-weight: 400;
		font-size: 13px;
		color: #6b7280;
	}

	.toc__item--level-h5 {
		margin-left: 80px;
	}

	.toc__item--level-h5 .toc__link {
		font-weight: 400;
		font-size: 12px;
		color: #6b7280;
	}

	.toc__item--level-h6 {
		margin-left: 100px;
	}

	.toc__item--level-h6 .toc__link {
		font-weight: 400;
		font-size: 12px;
		color: #6b7280;
	}

	.toc__link {
		display: flex;
		align-items: center;
		font-family: "Noto Sans JP", sans-serif;
		font-size: 14px;
		line-height: 1.5;
		color: #595959;
		text-decoration: none;
		padding: 6px 12px 6px 6px;
		border-radius: 0;
		background: #fff;
		box-shadow: inset 0px -1px 0px 0px rgba(196, 196, 196, 1);
		transition:
			background-color 0.2s,
			color 0.2s;
	}

	.toc__link:hover {
		background-color: #f5f5f5;
		color: #262626;
	}
</style>
