---
import { type LocalTag, getAllLocalArticles, getAllLocalTags } from "../lib/content";
import TagListItem from "./TagListItem.astro";

// サイドバー用に全タグを取得
const allTags = await getAllLocalTags();

// 記事一覧を取得してタグごとのカウントを計算
const articles = await getAllLocalArticles();

// タグごとの記事数をカウント
const tagCounts: Record<string, number> = {};
for (const article of articles) {
  if (article.tags) {
    for (const tagName of article.tags) {
      tagCounts[tagName] = (tagCounts[tagName] || 0) + 1;
    }
  }
}
---

<aside class="blog-sidebar">
	<div class="blog-sidebar__section">
		<h3 class="blog-sidebar__title">タグ</h3>
		<div class="blog-sidebar__tags">
			{
				allTags.map((tag: LocalTag) => (
					<div class="tag-list-wrapper" data-tag-name={tag.name.toLowerCase()}>
						<TagListItem
							tag={tag}
							count={tagCounts[tag.name] ? tagCounts[tag.name] : 0}
						/>
					</div>
				))
			}
		</div>
	</div>

	<div class="blog-sidebar__section">
		<h3 class="blog-sidebar__title">検索</h3>
		<form class="blog-sidebar__search" action="/search" method="get">
			<input
				type="text"
				name="q"
				placeholder="記事を検索..."
				class="blog-sidebar__search-input"
			/>
			<button type="submit" class="blog-sidebar__search-button">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					width="16"
					height="16"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
					stroke-linecap="round"
					stroke-linejoin="round"
				>
					<circle cx="11" cy="11" r="8"></circle>
					<path d="M21 21L16.5 16.5"></path>
				</svg>
			</button>
		</form>
	</div>
</aside>

<style>
