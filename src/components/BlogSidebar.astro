	}

	.blog-sidebar__search-button {
		background-color: #262626;
		color: #ffffff;
		border: none;
		border-radius: 4px;
		padding: 8px;
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
		transition: background-color 0.2s ease;
	}

	.blog-sidebar__search-button:hover {
		background-color: #404040;
	}

	@media (max-width: 768px) {
		.blog-sidebar {
			margin-bottom: 20px;
		}
	}
</style>
